  {{#if removedUser}}
  <div class="alert alert-primary alert-dismissible show" role="alert">
    User has been removed successfully!
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
{{/if}}


    <div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <div class="fresh-table full-color-blue">
        <!--
          Available colors for the full background: full-color-blue, full-color-azure, full-color-green, full-color-red, full-color-orange
          Available colors only for the toolbar: toolbar-color-blue, toolbar-color-azure, toolbar-color-green, toolbar-color-red, toolbar-color-orange
        -->
          <div class="toolbar">
            <button id="alertBtn" class="btn btn-default">All Users </button>
          </div>

          <table id="fresh-table" class="table">
            <thead>
              <th data-field="id">ID</th>
              <th data-field="name" data-sortable="true">First Name</th>
              <th data-field="last-name" data-sortable="true">Last Name</th>
              <th data-field="salary" data-sortable="true">Email</th>
              <th data-field="country" data-sortable="true">Phone</th>
              <th data-field="actions">Actions</th>
            </thead>
            <tbody>
              {{#each result}}
              <tr>
                <td>{{this.id}}</td>
                <td>{{this.first_name}}</td>
                <td>{{this.last_name}}</td>
                <td>{{this.email}}</td>
                <td>{{this.phone}}</td>
                <td>
                  <a rel="tooltip" title="View" class="table-action like" href="/viewuser/{{this.id}}" title="View">
                    <i class="text-warning bi bi-eye"></i>
                  </a>
                  <a rel="tooltip" title="Edit" class="table-action edit" href="/edituser/{{this.id}}" title="Edit">
                    <i class="text-warning bi bi-pencil"></i>
                  </a>
                  <a rel="tooltip" title="Delete" class="table-action remove" href="/{{this.id}}" title="Delete">
                    <i class="text-warning bi bi-person-x"></i>
                  </a>
                </td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

